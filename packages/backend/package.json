{
  "name": "@prophesy/backend",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun run db:generate && bun build ./index.ts --outdir ./dist --target node --external @prisma/client --external prisma",
    "start": "bun run dist/index.js",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "db:push": "dotenv -e .env.local prisma db push",
    "db:reset": "prisma db push --force-reset",
    "db:studio": "prisma studio",
    "db:wipe": "docker-compose down -v && docker-compose up -d && bun run db:push",
    "db:generate": "prisma generate",
    "db:migrate:dev": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:prod": "dotenv -e .env.production prisma migrate deploy"
  },
  "dependencies": {
    "@prophesy/api": "workspace:*",
    "@trpc/server": "^10.45.2",
    "zod": "^3.24.1",
    "@prisma/client": "^5.10.2",
    "express": "^4.18.3",
    "@types/express": "^4.17.21"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "prisma": "^5.10.2",
    "dotenv-cli": "^7.4.1",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
