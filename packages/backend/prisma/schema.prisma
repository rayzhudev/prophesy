datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Define your models here
model User {
  id        String   @id @default(uuid())
  username  String   @unique
  email     String   @unique
  password  String
  tweets    Tweet[]
  createdAt DateTime @default(now())
}

model Tweet {
  id        String   @id @default(uuid())
  content   String
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}
